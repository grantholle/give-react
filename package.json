{
  "name": "give-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^1.2.0",
    "autoprefixer": "^9.6.1",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.1.2",
    "purgecss": "^1.3.0",
    "react": "^16.8.6",
    "react-addons-css-transition-group": "^15.6.2",
    "react-animate-height": "^2.0.15",
    "react-day-picker": "^7.3.0",
    "react-dom": "^16.8.6",
    "react-scripts": "3.0.1",
    "tailwindcss": "^1.0.5"
  },
  "scripts": {
    "start": "npm-run-all -p start:css start:js",
    "build": "npm-run-all build:css build:js",
    "start:js": "react-scripts start",
    "build:js": "react-scripts build",
    "start:css": "postcss src/styles/app.css -o src/components/layout.css -w",
    "build:css": "postcss src/styles/app.css -o src/components/layout.css --env production"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3"
  }
}
